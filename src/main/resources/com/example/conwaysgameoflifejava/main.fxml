<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import com.example.conwaysgameoflifejava.ResizableCanvas?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.conwaysgameoflifejava.MainController">
   <stylesheets>
      <URL value="@main.css" />
   </stylesheets>
   <left>
      <VBox styleClass="vbox" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="startButton" mnemonicParsing="false" onAction="#startSimulation" styleClass="button" text="Start">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin></Button>
            <Button fx:id="stopButton" mnemonicParsing="false" onAction="#stopSimulation" styleClass="button" text="Stop">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin></Button>
            <Button fx:id="pauseButton" mnemonicParsing="false" onAction="#pauseSimulation" styleClass="button" text="Pause">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin></Button>
            <Label styleClass="label" text="Background color" />
            <ColorPicker fx:id="backgroundColorPicker" styleClass="button">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin></ColorPicker>
            <Label styleClass="label" text="Cells color" />
            <ColorPicker fx:id="cellsColorPicker" styleClass="button">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin></ColorPicker>
         </children></VBox>
   </left>
   <center>
      <Pane fx:id="playgroundPane" BorderPane.alignment="CENTER">
         <ResizableCanvas fx:id="playground" onMouseClicked="#setCell" />
      </Pane>
   </center>
</BorderPane>
